<?xml version="1.0" encoding="utf-8"?>
<test
	xmlns:v="http://csm.nov.ru/schemas/Value.xsd"
	xmlns:u="http://csm.nov.ru/schemas/MeasurementUnit.xsd"
	xmlns:qv="http://csm.nov.ru/schemas/QuantityValue.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://csm.nov.ru/schemas/Value.xsd                   ../Value.xsd
		http://csm.nov.ru/schemas/MeasurementUnit.xsd         ../MeasurementUnit.xsd
		http://csm.nov.ru/schemas/QuantityValue.xsd           ../QuantityValue.xsd
	"
>
	<ТестовоеЗначениеВеличины xsi:type="qv:ЗначениеВеличины">
		<qv:ПростоеЗначениеВеличины>
			<v:Число>
				<v:Мантисса>0.5</v:Мантисса>
			</v:Число>
		</qv:ПростоеЗначениеВеличины>
	</ТестовоеЗначениеВеличины>

	<ТестовоеЗначениеВеличины xsi:type="qv:ЗначениеВеличины">
		<!--<Представление lang="ru" формат="строка">0,2⋅10⁻⁴ кг⋅мм∕с²</Представление>-->
		<qv:ПростоеЗначениеВеличины>
			<!--<Представление lang="ru" формат="строка">0,2⋅10⁻⁴ кг⋅мм∕с²</Представление>-->
			<v:Число Порядок="-4">
				<v:Мантисса>0.2</v:Мантисса>
			</v:Число>
			<qv:ЕдиницаВеличины>
				<!--<Представление lang="ru" формат="строка">кг⋅мм∕с²</Представление>-->
				<u:ЕИ>
					<u:Обозначение lang="ru">кг</u:Обозначение>
				</u:ЕИ>
				<u:ЕИ>
					<u:Обозначение lang="ru">мм</u:Обозначение>
					<!--<u:КогерентнаяЕдиницаВеличины>
						<u:Обозначение>м</u:Обозначение>
						<u:Коэффициент Порядок="-3"/>
					</u:КогерентнаяЕдиницаВеличины>-->
				</u:ЕИ>
				<u:ЕИ Размерность="-2">
					<u:Обозначение lang="ru">с</u:Обозначение>
					<u:Обозначение lang="en">s</u:Обозначение>
				</u:ЕИ>
			</qv:ЕдиницаВеличины>
		</qv:ПростоеЗначениеВеличины>
	</ТестовоеЗначениеВеличины>

	<ТестовоеЗначениеВеличины xsi:type="qv:ЗначениеВеличины">
		<!--<Представление lang="ru">5 ч 20 мин 55 с</Представление>-->
		<qv:ПростоеЗначениеВеличины>
			<!--<Представление lang="ru" формат="строка">5 ч</Представление>-->
			<v:Число>
				<v:Мантисса>5</v:Мантисса>
				<v:Мантисса формат="строка">5/sqrt(3)</v:Мантисса>
			</v:Число>
			<qv:ЕдиницаВеличины>
				<u:ЕИ>
					<u:Обозначение lang="ru">ч</u:Обозначение>
				</u:ЕИ>
			</qv:ЕдиницаВеличины>
		</qv:ПростоеЗначениеВеличины>
		<qv:ПростоеЗначениеВеличины>
			<!--<Представление lang="ru" формат="строка">20 мин</Представление>-->
			<v:Число>
				<v:Мантисса>20</v:Мантисса>
			</v:Число>
			<qv:ЕдиницаВеличины>
				<u:ЕИ>
					<u:Обозначение lang="ru">мин</u:Обозначение>
				</u:ЕИ>
			</qv:ЕдиницаВеличины>
		</qv:ПростоеЗначениеВеличины>
		<qv:ПростоеЗначениеВеличины>
			<!--<Представление lang="ru" формат="строка">55 с</Представление>-->
			<v:Число>
				<v:Мантисса>55</v:Мантисса>
			</v:Число>
			<qv:ЕдиницаВеличины>
				<u:ЕИ>
					<u:Обозначение lang="ru">с</u:Обозначение>
				</u:ЕИ>
			</qv:ЕдиницаВеличины>
		</qv:ПростоеЗначениеВеличины>
	</ТестовоеЗначениеВеличины>
</test>